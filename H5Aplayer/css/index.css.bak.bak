@charset='utf-8';
*{margin:0;padding:0;}
ul,li{list-style:none;}
body{background:url('../img/bg1.png');}
.main{width:720px;height:700px;margin:20px auto;}
.main > .left,.right{width:330px;height:700px;background:rgba(135,206,250,0.5);border-radius:5px;padding:0 10px;}
.main > div.left{float:left;}
.main > div.right{float:right;}
.left .data{width:330px;height:30px;color:rgba(	0,139,139,.7);margin-top:10px;}
.left .control{width:330px;height:130px;border-bottom:2px solid rgba(0,206,209,0.2);position:relative;cursor:pointer;}
.left .control > div:nth-child(1){width:100%;height:5px;position:absolute;top:0;left:0;background:rgb(64,224,208);border-radius:2px;}
.left .control > div:nth-child(2){width:0px;height:5px;position:absolute;top:0;left:0;background:rgba(0,139,139,.7);border-radius:2px;}
.left .control > div:nth-child(3){width:14px;height:14px;border-radius:50%;background:#fff;position:absolute;top:-4px;left:0px;}
.left .control > div:nth-child(4){width:50px;height:10px;position:absolute;top:12px;left:0px;font:12px/10px 'Microsoft yahei';color:#fff;}
.left .control > div:nth-child(5){width:50px;height:10px;position:absolute;top:12px;right:0px;font:12px/10px 'Microsoft yahei';color:#fff;}

.left .control .con{width:100%;height:80px;position:absolute;margin-top:30px;}
.left .control .con span{display:block;float:left;border-radius:50%;margin-right:15px;}
.left .control .con span:nth-child(1){width:20px;height:20px;background:rgba(255,105,180,0.7);color:#fff;font:14px/20px 'Microsoft yahei';text-align:center;margin-top:30px;}
.left .control .con span:nth-child(2){width:45px;height:45px;background:url('../img/icon.jpg') -60px -62px;margin-top:17.5px;}
.left .control .con span:nth-child(3){width:67px;height:67px;background:url('../img/iconB.jpg') -91px -5px;margin-top:6.5px;}
.left .control .con span:nth-child(4){width:45px;height:45px;background:url('../img/icon.jpg') -118px -62px;margin-top:17.5px;}
.left .control .con span:nth-child(5){width:20px;height:20px;background:url('../img/vom.jpg'); margin-top:30px;}

.way{width:60px;height:20px;position:absolute;bottom:10px;right:5px;color:#fff;font:12px/20px 'Microsoft yahei';text-align:center;border-radius:5px;cursor:pointer;}
.way div#way{width:60px;height:20px;background:rgba(0,191,255,0.5);border-radius:5px;box-shadow:0 0 10px #fff;}
.way div#way:hover{background:rgba(0,191,255,1);}
.way ul{position:absolute;width:100px;top:20px;left:0px;border-radius:5px;background:rgba(255,105,180,0.8);display:none;z-index:2;}
.way ul li{line-height:30px;}
.way ul li:hover{color:rgba(0,0,255,0.8);}
#sound > div{position:absolute;}
#sound .slineC{width:65px;height:5px;background:rgb(64,224,208);left:262px;top:37.5px;border-radius:2px;}
#sound .slineD{width:65px;height:5px;background:rgba(0,139,139,.7);border-radius:2px;left:262px;top:37.5px;}
#sound .scircle{width:10px;height:10px;border-radius:50%;background:#fff;top:35px;left:325px;}
.left .control .con span:hover{box-shadow:0 0 20px rgba(70,130,180,0.7);}

#list{height:505px;width:100%;position:relative;margin-top:10px;border-radius:5px;overflow-x:hidden;overflow-y:auto;scrollbar-arrow-color: #f4ae21;scrollbar-highlight-color: #666;scrollbar-face-color: #333;}
#list::-webkit-scrollbar-button{height:10px;background:#ff6700;}
#list::-webkit-scrollbar{width:5px;background:#e4e4e4;}
#list::-webkit-scrollbar-thumb{background:#333;}
#list ul li{width:330px;height:30px;list-style:none;font-size:12px;text-indent:10px;color:rgba(0,0,0,1);}
#list ul li:hover{background:rgba(64,224,208,.5);}
#list .song{width:205px;float:left;line-height:30px;}
#list .singer{width:125px;float:left;line-height:30px;}

.right{position:relative;}
.right .img{height:160px;border-bottom:2px solid rgba(0,206,209,0.2);}
#rot{width:150px;height:150px;border-radius:50%;margin:10px auto;display:block;-webkit-animation:rotImg 8s linear infinite forwards;animation-play-state:paused;}
#rot:hover{animation-play-state:paused;}
.right .mask{position:relative;width:330px;height:450px;overflow-y:auto;overflow-x:hidden;scrollbar-arrow-color:rgba(244,174,33,0.5);scrollbar-highlight-color:#666;scrollbar-face-color: #333;}
#show{width:330px;height:400px;color:rgba(119,136,153,0.8);position:absolute;top:0px;left:0px;padding-top:50px;text-align:center;}
.right .mask::-webkit-scrollbar-button{height:10px;background:#ff6700;}
.right .mask::-webkit-scrollbar{width:5px;background:#e4e4e4;}
.right .mask::-webkit-scrollbar-thumb{background:#333;}
#show p{font:14px/25px 'Microsoft yahei';}
.right .author{position:absolute;right:10px;bottom:10px;text-decoration:none;font-size:12px;color:rgba(	0,0,205,0.5);}
#big{width:100%;height:50px;text-align:center;font:40px/50px 'Microsoft yahei';color:rgba(0,139,139,0.7);}
@-webkit-keyframes rotImg{
	0%{transform:rotate(0deg);}
	100%{transform:rotate(360deg);}
}